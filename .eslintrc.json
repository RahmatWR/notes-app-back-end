{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["."],
        "extensions": [".js", ".json"]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }]
  }
}
